<Window x:Class="DustInTheWind.Lisimba.Wpf.MainWindows.LisimbaWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:main="clr-namespace:DustInTheWind.Lisimba.Wpf.MainWindows"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        d:DataContext="{d:DesignInstance main:LisimbaViewModel}"
        Title="{Binding Title, Mode=OneWay}"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="{StaticResource LisimbaIcon}"
        ResizeMode="CanResizeWithGrip"
        Closing="LisimbaWindow_OnClosing">

    <Window.Resources>
        <DataTemplate DataType="{x:Type main:StartViewModel}">
            <main:StartPanel/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type main:AddressBookViewModel}">
            <main:AddressBookPanel/>
        </DataTemplate>
    </Window.Resources>
    
    <DockPanel>

        <main:LisimbaMainMenu DockPanel.Dock="Top" DataContext="{Binding LisimbaMainMenuViewModel}"/>
        <main:LisimbaToolBar DockPanel.Dock="Top" DataContext="{Binding LisimbaToolBarViewModel}"/>
        <main:LisimbaStatusBar DockPanel.Dock="Bottom" DataContext="{Binding LisimbaStatusBarViewModel}"/>
        
        <ContentControl Content="{Binding CurrentPageViewModel}"/>

    </DockPanel>

</Window>
