<Window x:Class="DustInTheWind.Lisimba.Wpf.MainWindows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutWindow"
        Height="300"
        Width="300"
        WindowStartupLocation="CenterOwner"
        Icon="Lion.ico">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Source="Lion.ico" Height="48" Width="48" RenderTransformOrigin="1.146,0.646"/>
        <Button Grid.Column="0" Grid.ColumnSpan="2" Content="Close" HorizontalAlignment="Center" Margin="0 8 0 0" Grid.Row="2" VerticalAlignment="Center" Width="75" Click="Button_Click"/>
        <TextBlock Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Text="Lisimba" FontSize="20"/>
    </Grid>

</Window>
