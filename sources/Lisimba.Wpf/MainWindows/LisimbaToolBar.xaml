<UserControl x:Class="DustInTheWind.Lisimba.Wpf.MainWindows.LisimbaToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300"
             d:DesignWidth="300">

    <ToolBarTray VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        
        <ToolBar>
            <Button Command="{Binding NewAddressBookCommand}">New</Button>
            <Button Command="{Binding OpenAddressBookCommand}">Open</Button>
            <Button Command="{Binding SaveAddressBookCommand}">Save</Button>
            <Separator/>
            <Button Command="{Binding UndoCommand}">Undo</Button>
            <Button Command="{Binding RedoCommand}">Redo</Button>
            <Separator/>
            <Button Command="{Binding ShowAboutCommand}">About</Button>
        </ToolBar>
    
    </ToolBarTray>

</UserControl>
